   </div>
   <div class="review__items">
       <img src=
 "https://media.geeksforgeeks.org/wp-content/uploads/20210101144014/gfglogo.png"  alt=""   height="" width=""/>
     
   </div>
   <div class="review__items">
<img src="https://media.geeksforgeeks.org/img-practice/courses/GfG_Logo.png" alt=""  height="" width=""/> 
     
   </div>
   <div class="review__button">
       <button id="prev" onclick="previousReview()">
           PREV
       </button>
 
       <button id="next" onclick="nextReview()">
           NEXT
       </button>
   </div>
 </div>
 </html>
 <script>
  //Filename: script.js
let rev = 0;
carousel(rev);

function previousReview() {
	rev = rev - 1;
	carousel(rev);
}

function nextReview() {
	rev = rev + 1;
	carousel(rev);
}

function carousel(review) {
	let reviews = document.getElementsByClassName("review__items");

	if (review >= reviews.length) {
		review = 0;
		rev = 0;
	}
	if (review < 0) {
		review = reviews.length - 1;
		rev = reviews.length - 1;
	}
	for (let i = 0; i < reviews.length; i++) {
		reviews[i].style.display = "none";
	}
	reviews[review].style.display = "block";
}

 </script>
 